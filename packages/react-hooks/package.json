{
  "name": "@mountain-ui/react-hooks",
  "version": "0.6.1",
  "description": "Mountain UI hooks library",
  "keywords": [
    "react",
    "react-hooks",
    "hooks",
    "mountain-ui"
  ],
  "homepage": "https://github.com/mountain-ui/mountain-ui/tree/main/packages/react-hooks#readme",
  "bugs": {
    "url": "https://github.com/mountain-ui/mountain-ui/issues"
  },
  "repository": "https://github.com/tonyghiani/mountain-ui",
  "license": "MIT",
  "author": "Marco Antonio Ghiani <marcoantonio.ghiani01@gmail.com>",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:build && yarn build:cjs && yarn build:esm && yarn build:types",
    "build-storybook": "build-storybook",
    "build:cjs": "BABEL_ENV=cjs babel --extensions .ts,.tsx --ignore src/**/*.stories.tsx ./src --out-dir dist/cjs",
    "build:esm": "BABEL_ENV=esm babel --extensions .ts,.tsx --ignore src/**/*.stories.tsx ./src --out-dir dist/esm",
    "build:types": "tsc --project ./tsconfig.types.json",
    "clean:build": "rimraf dist *.tsbuildinfo",
    "commit": "git cz",
    "lint": "eslint",
    "lint:package": "sort-package-json",
    "storybook": "start-storybook -p 6006",
    "test": "NODE_ENV=testing jest --passWithNoTests",
    "test:ci": "NODE_ENV=ci jest --no-cache",
    "test:coverage": "yarn test --coverage",
    "test:json": "mkdir -p coverage && yarn test --json --outputFile=coverage/.jest-test-results.json || true",
    "test:watch": "yarn test --watch"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "@mountain-ui/utils": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@mountain-ui/react-components": "^0.9.0",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-jest": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.2",
    "eslint-plugin-react": "^7.25.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "@mountain-ui/react-components": ">=0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@mountain-ui/react-components",
  "version": "0.11.8",
  "description": "React components library based on mountain ui",
  "keywords": [
    "mountain-ui",
    "react",
    "react-components",
    "components",
    "icons",
    "svg",
    "css"
  ],
  "homepage": "https://github.com/mountain-ui/mountain-ui/tree/main/packages/react-components#readme",
  "repository": "https://github.com/tonyghiani/mountain-ui",
  "license": "MIT",
  "author": "Marco Antonio Ghiani <marcoantonio.ghiani01@gmail.com>",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:build && yarn build:vite && yarn build:types",
    "build:icons": "yarn icons:convert && yarn icons:types-map",
    "build:storybook": "storybook build",
    "build:types": "tsc --project ./tsconfig.types.json",
    "build:vite": "vite build",
    "clean:build": "rimraf dist *.tsbuildinfo",
    "commit": "git cz",
    "icons:convert": "svgr --out-dir ./src/components/atoms/Icon/icons --config-file ./svgr.config.js ./src/components/atoms/Icon/assets",
    "icons:types-map": "node ./scripts/create-type-to-icon-map.js",
    "lint": "eslint ./src",
    "lint:package": "sort-package-json",
    "release": "semantic-release",
    "storybook": "storybook dev -p 6006",
    "test": "NODE_ENV=testing jest",
    "test:ci": "NODE_ENV=ci jest --no-cache",
    "test:coverage": "yarn test --coverage",
    "test:json": "mkdir -p coverage && yarn test --json --outputFile=coverage/.jest-test-results.json || true",
    "test:storybook": "test-storybook",
    "test:watch": "yarn test --watch"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "@mountain-ui/react-hooks": "^0.7.15",
    "@mountain-ui/utils": "^0.4.0",
    "prism-react-renderer": "2.1.0",
    "react-range": "^1.8.14"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.5.0",
    "@storybook/addon-essentials": "^7.5.0",
    "@storybook/addon-interactions": "^7.5.0",
    "@storybook/addon-links": "^7.5.0",
    "@storybook/addon-storyshots": "^7.5.0",
    "@storybook/blocks": "^7.5.0",
    "@storybook/react": "^7.5.0",
    "@storybook/react-vite": "^7.5.0",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.2",
    "@svgr/cli": "^8.1.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "autoprefixer": "^10.4.16",
    "axe-playwright": "^1.2.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.15",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.11",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.0",
    "tailwindcss": "^3.3.3"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17",
    "tailwindcss": ">=3"
  },
  "publishConfig": {
    "access": "public"
  }
}

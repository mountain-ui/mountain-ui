{
  "name": "@mountain-ui/react",
  "version": "1.0.0-alpha.7",
  "private": false,
  "description": "React components library based on mountain ui",
  "keywords": [
    "mountain-ui",
    "react",
    "react-component",
    "components",
    "css-in-js",
    "styled",
    "styled-components",
    "styled-system"
  ],
  "repository": "https://github.com/tonyghiani/mountain-ui",
  "license": "MIT",
  "author": "Marco Antonio Ghiani <marcoantonio.ghiani01@gmail.com>",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && yarn build:cjs && yarn build:esm && yarn build:types",
    "build-storybook": "build-storybook",
    "build:cjs": "BABEL_ENV=cjs babel --extensions .ts,.tsx --ignore src/**/*.test.js,src/**/*.stories.js ./src --out-dir dist/cjs",
    "build:esm": "BABEL_ENV=esm babel --extensions .ts,.tsx --ignore src/**/*.test.js,src/**/*.stories.js ./src --out-dir dist/esm",
    "build:types": "tsc --project ./tsconfig.types.json",
    "clean": "rm -rf node_modules yarn.lock && yarn",
    "co": "git cz",
    "generate": "node scripts/generate.js",
    "lint:package": "sort-package-json",
    "release": "semantic-release",
    "storybook": "yarn test:json && start-storybook -p 6006",
    "test": "NODE_ENV=testing jest",
    "test:ci": "NODE_ENV=ci jest",
    "test:json": "mkdir -p coverage && yarn test --json --outputFile=coverage/.jest-test-results.json || true",
    "test:watch": "yarn test --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "package.json": [
      "yarn lint:package"
    ],
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.7",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@storybook/addon-a11y": "^6.1.17",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-jest": "^6.1.17",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/addon-storyshots": "^6.1.17",
    "@storybook/react": "^6.1.15",
    "@styled-system/css": "^5.1.5",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/styled-components": "^5.1.7",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__css": "^5.0.14",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "chromatic": "^5.7.0",
    "commitizen": "^4.2.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fs-extra": "^9.1.0",
    "git-cz": "^4.7.6",
    "husky": "^4.3.8",
    "inquirer": "^7.3.3",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "prism-react-renderer": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "sort-package-json": "^1.48.1",
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@styled-system/css": ">=5",
    "@types/react": "^16.8.6 || ^17.0.0",
    "prism-react-renderer": "^1.2.0",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0",
    "styled-components": ">=5",
    "styled-system": ">=5"
  },
  "engines": {
    "node": ">=12.6.0",
    "yarn": ">=1.22.0"
  }
}

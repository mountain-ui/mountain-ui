{
  "name": "@mountain-ui/utils",
  "version": "0.4.0",
  "private": false,
  "description": "A set of utilities for the mountain-ui libraries",
  "keywords": [
    "mountain-ui",
    "react",
    "react-component",
    "utils",
    "js"
  ],
  "homepage": "https://github.com/mountain-ui/mountain-ui/tree/main/packages/utils#readme",
  "repository": "https://github.com/tonyghiani/mountain-ui",
  "license": "MIT",
  "author": "Marco Antonio Ghiani <marcoantonio.ghiani01@gmail.com>",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:build && yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "BABEL_ENV=cjs babel --extensions .ts,.tsx ./src --out-dir dist/cjs",
    "build:esm": "BABEL_ENV=esm babel --extensions .ts,.tsx ./src --out-dir dist/esm",
    "build:types": "tsc --project ./tsconfig.types.json",
    "clean:build": "rimraf dist *.tsbuildinfo",
    "commit": "git cz",
    "lint": "eslint",
    "lint:package": "sort-package-json",
    "release": "semantic-release",
    "test": "NODE_ENV=testing jest",
    "test:ci": "NODE_ENV=ci jest --no-cache",
    "test:coverage": "yarn test --coverage",
    "test:json": "mkdir -p coverage && yarn test --json --outputFile=coverage/.jest-test-results.json || true",
    "test:watch": "yarn test --watch"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "typescript": "^4.2.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

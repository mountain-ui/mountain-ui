{
  "name": "mountain-ui",
  "version": "0.0.0",
  "private": false,
  "description": "React components library based on mountain ui",
  "repository": "https://github.com/tonyghiani/mountain-ui",
  "license": "MIT",
  "author": "Marco Antonio Ghiani <marcoantonio.ghiani01@gmail.com>",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && yarn build:cjs && yarn build:esm && yarn build:types",
    "build-storybook": "build-storybook",
    "build:cjs": "BABEL_ENV=cjs babel --extensions .ts,.tsx --ignore src/**/*.test.ts,src/**/*.stories.tsx ./src --out-dir dist/cjs",
    "build:esm": "BABEL_ENV=esm babel --extensions .ts,.tsx --ignore src/**/*.test.ts,src/**/*.stories.tsx ./src --out-dir dist/esm",
    "build:types": "tsc --project ./tsconfig.types.json",
    "co": "git cz",
    "generate": "node scripts/generate.js",
    "lint:package": "sort-package-json",
    "storybook": "start-storybook -p 6006",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "yarn lint:package"
    ],
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "dependencies": {
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.7",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/react": "^6.1.15",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "commitizen": "^4.2.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "fs-extra": "^9.1.0",
    "git-cz": "^4.7.6",
    "husky": "^4.3.8",
    "inquirer": "^7.3.3",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.48.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@types/react": "^16.8.6 || ^17.0.0",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "engines": {
    "node": ">=12.6.0",
    "yarn": ">=1.22.0"
  }
}

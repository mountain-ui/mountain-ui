{
  "extends": "./tsconfig",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "rootDir": "./src",
    "paths": {
      "mnt-internals": ["./src/internals"]
    },
    "noErrorTruncation": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.stories.ts", "src/**/*.stories.tsx"]
}
